{
  "version": "0.1.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prettier": "prettier --ignore-path .gitignore \"**/*.{js,json,ts,tsx,scss,css,md}\"",
    "format": "yarn prettier -- --write",
    "check:format": "yarn prettier -- --list-different",
    "clean": "rimraf dist"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "name": "dotenv-cloak",
  "author": "Yony Calsin",
  "module": "dist/dotenv-cloak.esm.js",
  "size-limit": [
    {
      "path": "dist/dotenv-cloak.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/dotenv-cloak.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.5",
    "@types/node": "^17.0.8",
    "@yonycalsin/prettier-config-react-typescript": "^1.0.1",
    "husky": "^7.0.4",
    "size-limit": "^7.0.5",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "printWidth": 120
  },
  "repository": {
    "url": "https://github.com/yonycalsin/dotenv-cloak"
  },
  "dependencies": {
    "fs-extra": "^10.0.0"
  }
}
